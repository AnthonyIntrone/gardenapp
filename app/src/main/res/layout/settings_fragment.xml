<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageButton
        android:id="@+id/home_image_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:background="@android:color/transparent"
        android:src="@drawable/home_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/setting_home_bottom_horizontal_guideline"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/account"
        android:textSize="30sp"
        android:layout_marginStart="16dp"
        android:textColor="@color/colorWhite"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/setting_home_bottom_horizontal_guideline"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorBlack"
        app:layout_constraintTop_toTopOf="@id/setting_home_bottom_horizontal_guideline"/>

    <ImageView
        android:id="@+id/settings_profile_pic_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/setting_profile_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/setting_home_bottom_horizontal_guideline"
        app:layout_constraintBottom_toTopOf="@id/user_name_text_view"/>

    <TextView
        android:id="@+id/user_name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/user_name"
        android:textColor="@color/colorWhite"
        android:textSize="32sp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@id/setting_switch_top_horizontal_guideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/setting_switch_top_horizontal_guideline"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/setting_1_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/setting1"
            android:textColor="@color/colorWhite"
            android:textSize="20sp"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintBottom_toTopOf="@id/setting_2_text_view"
            app:layout_constraintEnd_toStartOf="@+id/switch_1_switch_compat"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/setting_2_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/setting2"
            android:textColor="@color/colorWhite"
            android:textSize="20sp"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintBottom_toTopOf="@id/setting_3_text_view"
            app:layout_constraintEnd_toStartOf="@+id/switch_2_switch_compat"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/setting_1_text_view" />

        <TextView
            android:id="@+id/setting_3_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/setting3"
            android:textColor="@color/colorWhite"
            android:textSize="20sp"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintBottom_toTopOf="@id/setting_4_text_view"
            app:layout_constraintEnd_toStartOf="@+id/switch_3_switch_compat"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/setting_2_text_view" />

        <TextView
            android:id="@+id/setting_4_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/setting4"
            android:textColor="@color/colorWhite"
            android:textSize="20sp"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintBottom_toTopOf="@id/setting_5_text_view"
            app:layout_constraintEnd_toStartOf="@+id/switch_4_switch_compat"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/setting_3_text_view" />

        <TextView
            android:id="@+id/setting_5_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/setting5"
            android:textColor="@color/colorWhite"
            android:textSize="20sp"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/switch_5_switch_compat"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/setting_4_text_view" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switch_1_switch_compat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/switch_2_switch_compat"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/setting_1_text_view"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switch_2_switch_compat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/switch_3_switch_compat"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/setting_2_text_view"
            app:layout_constraintTop_toBottomOf="@+id/switch_1_switch_compat" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switch_3_switch_compat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/switch_4_switch_compat"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/setting_3_text_view"
            app:layout_constraintTop_toBottomOf="@+id/switch_2_switch_compat" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switch_4_switch_compat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/switch_5_switch_compat"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/setting_4_text_view"
            app:layout_constraintTop_toBottomOf="@+id/switch_3_switch_compat" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switch_5_switch_compat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/setting_5_text_view"
            app:layout_constraintTop_toBottomOf="@+id/switch_4_switch_compat" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/setting_home_bottom_horizontal_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".08"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/setting_switch_top_horizontal_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".4"/>

</androidx.constraintlayout.widget.ConstraintLayout>